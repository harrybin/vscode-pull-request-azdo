{
	"npm.packageManager": "yarn",
	"files.trimTrailingWhitespace": true,
	"editor.insertSpaces": false,
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
		"**/.vscode-test/**": true,
		"**/.temp/**": true
	},
	"files.associations": {
		".eslintrc.json": "jsonc",
		".eslintrc.*.json": "jsonc"
	},
	"gitlens.advanced.blame.customArguments": ["--ignore-revs-file", ".gitignore-revs"]
}
